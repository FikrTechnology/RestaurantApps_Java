<?xml version="1.0" encoding="utf-8"?>
<!-- PRESENTATION LAYER: Grid Item Layout
     Layout custom untuk setiap item card di GridView
     Card ini menampilkan: Gambar, Nama, Tempat, Rating
-->
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardViewRestaurant"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    android:layout_margin="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- ImageView: Tampilkan gambar restaurant -->
        <!-- ID: imageViewRestaurant (untuk Glide image loading) -->
        <ImageView
            android:id="@+id/imageViewRestaurant"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:scaleType="centerCrop"
            android:contentDescription="@string/app_name" />

        <!-- Container untuk text (padding dan spacing) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp">

            <!-- TextView: Nama restaurant (bold, 2 lines max) -->
            <!-- ID: textViewName (untuk binding data) -->
            <TextView
                android:id="@+id/textViewName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Restaurant Name"
                android:textStyle="bold"
                android:textSize="14sp"
                android:maxLines="2"
                android:ellipsize="end" />

            <!-- TextView: Kota (gray color, 1 line) -->
            <!-- ID: textViewCity (untuk binding data) -->
            <TextView
                android:id="@+id/textViewCity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Kota"
                android:textSize="12sp"
                android:textColor="#666666"
                android:layout_marginTop="4dp"
                android:maxLines="1"
                android:ellipsize="end" />

            <!-- Container untuk rating (horizontal layout) -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp"
                android:gravity="center_vertical">

                <!-- RatingBar: Tampilkan rating dengan bintang -->
                <!-- ID: ratingBarRestaurant (untuk rating visual) -->
                <RatingBar
                    android:id="@+id/ratingBarRestaurant"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:numStars="5"
                    android:isIndicator="true"
                    android:stepSize="0.1"
                    style="?android:attr/ratingBarStyleSmall" />

                <!-- TextView: Text rating (optional, untuk clarity) -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" Rating"
                    android:textSize="10sp"
                    android:layout_marginStart="4dp"
                    android:textColor="#666666" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
