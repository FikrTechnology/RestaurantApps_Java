<?xml version="1.0" encoding="utf-8"?>
<!-- STEP 4.2: Layout custom untuk setiap item card di GridView -->
<!-- Card ini menampilkan: Gambar, Nama, Tempat, Rating -->
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    android:layout_margin="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- STEP 4.2.1: ImageView untuk gambar restaurant -->
        <ImageView
            android:id="@+id/iv_restaurant_image"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:scaleType="centerCrop"
            android:contentDescription="@string/app_name" />

        <!-- STEP 4.2.2: Container untuk text (padding dan spacing) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp">

            <!-- STEP 4.2.3: TextView untuk nama restaurant -->
            <TextView
                android:id="@+id/tv_restaurant_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Restaurant Name"
                android:textStyle="bold"
                android:textSize="14sp"
                android:maxLines="2"
                android:ellipsize="end" />

            <!-- STEP 4.2.4: TextView untuk kota -->
            <TextView
                android:id="@+id/tv_restaurant_city"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Kota"
                android:textSize="12sp"
                android:textColor="#666666"
                android:layout_marginTop="4dp"
                android:maxLines="1"
                android:ellipsize="end" />

            <!-- STEP 4.2.5: Container untuk rating dengan ikon -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp"
                android:gravity="center_vertical">

                <!-- STEP 4.2.6: TextView untuk rating -->
                <TextView
                    android:id="@+id/tv_restaurant_rating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4.5"
                    android:textStyle="bold"
                    android:textSize="12sp"
                    android:textColor="#FF9800" />

                <!-- STEP 4.2.7: TextView untuk simbol bintang -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" â­"
                    android:textSize="12sp"
                    android:layout_marginStart="4dp" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
